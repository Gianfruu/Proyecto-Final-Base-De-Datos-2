<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Nuevo Producto</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="container">
    <h1>Nuevo producto</h1>
    
        <% if (error) { %>
          <div class="error-message">
            ⚠️ <%= error %>
          </div>
        <% } %>

        <form class="form-producto" method="POST" action="/productos">
          <div class="form-row">
            <label for="codigo">Código:</label>
            <input type="text" id="codigo" name="codigo" required placeholder="Ej: PROD745" oninput="this.value = this.value.toUpperCase()">      
          </div>

          <div class="form-row">
            <label for="nombre">Nombre:</label>
            <input type="text" id="nombre" name="nombre" required>
          </div>

          <div class="form-row">
            <label for="categoria">Categoría:</label>
            <input type="text" id="categoria" name="categoria" required>
          </div>

          <div class="form-row">
            <label for="precio">Precio:</label>
            <input type="number" step="0.01" id="precio" name="precio" required min="0.01" placeholder="Ej: 1299.99" oninput="validarDecimal(this)">
          </div>

          <div class="form-row">
            <label for="stockActual">Stock Actual:</label>
            <input type="number" id="stockActual" name="stockActual" required min="0" step="1">
          </div>

          <div class="form-row">
            <label for="stockMinimo">Stock Mínimo:</label>
            <input type="number" id="stockMinimo" name="stockMinimo" required min="0" step="1">
          </div>

          <div class="form-row">
            <label for="proveedorId">Proveedor:</label>
            <select name="proveedorId" id="proveedorId" required>
              <% proveedores.forEach(p => { %>
                <option value="<%= p._id %>"><%= p.nombre %></option>
              <% }) %>
            </select>
          </div> 
          <button type="submit">Guardar Producto</button>
        </form>
  </div>

  <script>
  function validarDecimal(input) {
    if (input.value.startsWith('.')) {
      input.value = '0' + input.value;
    }
  }
</script>
</body>
</html>

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Editar Movimiento</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="container">
    
    <h1>Editar Movimiento</h1>

    <form method="POST" action="/movimientos/<%= movimiento._id %>?_method=PUT" class="form-producto">
  
      <div class="form-row">
        <label for="productoId">Producto:</label>
        <select id="productoId" name="productoId" required>
          <% productos.forEach(p => { %>
            <option value="<%= p._id %>" <%= (p._id === movimiento.productoId._id) ? 'selected' : '' %>>
              <%= p.nombre %> (<%= p.codigo %>)
            </option>
          <% }) %>
        </select>
      </div>
      
      <div class="form-row">
        <label for="tipo">tipo:</label>
        <input type="text" id="tipo" name="tipo" value="<%= movimiento.tipo %>" required>
      </div>

      <div class="form-row">
        <label for="cantidad">cantidad:</label>
        <input type="number" id="cantidad" name="cantidad" min="0" value="<%= movimiento.cantidad %>">
      </div>

      <div class="form-row">
        <label for="motivo">motivo:</label>
        <input type="text" id="motivo" name="motivo" value="<%= movimiento.motivo %>" required>
      </div>

      <div class="form-row">
        <label for="usuario">usuario:</label>
        <input type="text" id="usuario" name="usuario" value="<%= movimiento.usuario %>" required>
      </div>

      <button type="submit">Guardar cambios</button>
    </form>

  </div>
</body>
</html>  